@using Electronics_project.Utilities;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Electronics_project</title>
@*     <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" /> *@
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <script src="https://kit.fontawesome.com/efb34d690c.js" crossorigin="anonymous"></script>
    <script async src="~/js/site.js" asp-append-version="true"></script>
@*     <link rel="stylesheet" href="~/Electronics_project.styles.css" asp-append-version="true" /> *@
</head>
<body>
    <header>
       <nav>
           <div class="logo-con">
               <a asp-page="Index"><img src="images/computer-shop-logo.png" /></a>
           </div>
           <div class="nav-links-con">
                @if (User.Identity.IsAuthenticated)
                {
                    @foreach (var loggedInLinks in LayoutHelper.ForLoggedIn)
                    {
                        <a asp-page="@loggedInLinks">@loggedInLinks</a>
                    }
                }
                else
                {
                    @foreach (var link in LayoutHelper.Pages)
                    {
                        <a asp-page="@link">@link</a>
                    }
                }

               <a asp-page="Cart"><i class="fa-solid fa-cart-shopping"></i></a>
           </div>


            <div class="burger-menu-con">
                <i class="fa-solid fa-bars"></i>
            </div>
       </nav>

        <div class="nav-links-con-burger">
            @if (User.Identity.IsAuthenticated)
            {
                @foreach (var loggedInLinks in LayoutHelper.ForLoggedIn)
                {
                    <a asp-page="@loggedInLinks">@loggedInLinks</a>
                }
            }
            else
            {
                @foreach (var link in LayoutHelper.Pages)
                {
                    <a asp-page="@link">@link</a>
                }
            }
            <a asp-page="Cart"><i class="fa-solid fa-cart-shopping"></i></a>
        </div>
    </header>
    <div class="main-container">
        <main role="main" class="main">
            @RenderBody()
        </main>
    </div>

    <footer>
        <div class="container">
            &copy; 2023 - Electronics_project - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @* <script src="~/js/site.js" asp-append-version="true"></script> *@

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>